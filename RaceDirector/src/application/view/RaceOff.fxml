<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.HeatController">
   <children>
      <GridPane layoutX="323.0" layoutY="145.0" prefHeight="197.0" prefWidth="276.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ComboBox fx:id="pilotSelectionComboBox" prefHeight="65.0" prefWidth="364.0" promptText="Select Pilot" />
            <TextField fx:id="pilotScoreEntry" promptText="Enter Score" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Label fx:id="heatDisplayLabel" layoutX="43.0" layoutY="30.0" text="Race Off">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="saveScoresButton" layoutX="155.0" layoutY="490.0" mnemonicParsing="false" onAction="#saveScores" text="save scores" />
      <Button fx:id="nextHeatButton" layoutX="360.0" layoutY="490.0" mnemonicParsing="false" onAction="#nextHeatUpdatedScene" text="Next Heat" />
      <Button fx:id="startTimerButton" layoutX="256.0" layoutY="490.0" mnemonicParsing="false" onAction="#startTimer" text="Start Timer" />
      <GridPane layoutX="237.0" layoutY="401.0" prefHeight="45.0" prefWidth="116.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="secondsLabel" alignment="CENTER" prefHeight="32.0" prefWidth="99.0" text="00" GridPane.columnIndex="2">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="99.0" text=":" GridPane.columnIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="minuteLabel" alignment="CENTER" prefHeight="35.0" prefWidth="102.0" text="2">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </GridPane>
      <Button fx:id="roundMenuButton" layoutX="468.0" layoutY="30.0" mnemonicParsing="false" onAction="#returnToRoundMenu" text="Round Menu" />
      <ScrollPane layoutX="43.0" layoutY="140.0" prefViewportHeight="205.0" prefViewportWidth="258.0">
         <content>
            <Label fx:id="pilotHeat" alignment="TOP_LEFT" layoutX="120.0" layoutY="138.0" prefHeight="361.0" prefWidth="288.0" wrapText="true" />
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
